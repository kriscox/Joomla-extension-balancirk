<?xml version="1.0" encoding="utf-8"?>
<extension type="package"
	method="upgrade">
	<!-- 'version' attribute for extension tag is no longer used -->

	<name>Balancirk</name>
	<packagename>balancirk</packagename>
	<creationDate>September 2023</creationDate>
	<author>Kris Cox</author>
	<authorUrl>https://cococo.be</authorUrl>
	<authorEmail>info@cococo.be</authorEmail>
	<copyright>CoCoCo</copyright>
	<license>GPL v3</license>
	<version>0.0.2</version>
	<description>PKG_BALANCIRK_MODULE_DESCRIPTION</description>

	<!-- on update don't forget to add also to makefile -->
	<files folder="packages">
		<file type="component"
			id="com_balancirk">com_balancirk.zip</file>
		<file type="plugin"
			id="balancirk"
			group="webservices">balancirk.zip</file>
		<!-- <file type="module" id="mod_balancirk">mod_balancirk.zip</file> -->
	</files>

	<!-- on update don't forget to add also to makefile -->
	<languages folder="language">
		<language tag="nl-BE">nl-BE/pkg_balancirk.sys.ini</language>
		<language tag="en-GB">en-GB/pkg_balancirk.sys.ini</language>
	</languages>

	<changelogurl>https://raw.githubusercontent.com/kriscox/Joomla-extension-test/master/balancirk_changelog.xml</changelogurl>

	<updateservers>
		<server type="extension"
			name="Balancirk">https://raw.githubusercontent.com/kriscox/Joomla-extension-test/master/balancirk_update.xml</server>
	</updateservers>
</extension>
