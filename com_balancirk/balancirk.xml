<?xml version="1.0" encoding="utf-8" ?>
<extension type="component"
    method="upgrade">

    <name>Balancirk</name>
    <creationDate>June 2022</creationDate>
    <author>Kris Cox</author>
    <authorEmail>kris.cox@cococo.be</authorEmail>
    <authorUrl>https://cococo.be</authorUrl>
    <copyright>CoCoCo</copyright>
    <license>GPL v3</license>

    <version>0.0.1</version>
    <description>COM_BALANCIRK_MODULE_DESCRIPTION</description>

    <namespace path="src">CoCoCo\Component\Balancirk</namespace>

    <scriptfile>script.php</scriptfile>

    <install>
        <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <!-- Site files -->
    <!-- Site Main File Copy Section -->
    <!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->

    <files folder="site">
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <languages folder="site">
        <language tag="en-GB">language/en-GB/com_balancirk.ini</language>
    </languages>

    <administration>
        <!-- menu entries-->
        <menu view="Balancirk">COM_BALANCIRK</menu>
        <submenu>
            <menu link="option=com_balancirk">COM_STUDENTS</menu>
        </submenu>

        <files folder="admin">
            <folder>src</folder>
            <folder>sql</folder>
            <folder>services</folder>
            <folder>tmpl</folder>
        </files>
    </administration>

    <!-- Change And Update Section-->
    <!-- This section contains links to the sites where update and change 
        configuration is found for automatic update within the joomla 
        administrator site within extensions-->

    <changelogurl>https://raw.githubusercontent.com/kriscox/Joomla-extension-test/master/balancirk_changelog.xml</changelogurl>
    <updateservers>
        <server type="extension"
            name="Balancirk">https://raw.githubusercontent.com/kriscox/Joomla-extension-test/master/balancirk_update.xml</server>
    </updateservers>

</extension>