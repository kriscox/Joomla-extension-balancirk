<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="inital">
    <!-- 'version' attribute for extension tag is no longer used -->

    <name>Balancirk</name>
    <!-- The following elements are optional and free of formatting constraints -->
    <creationDate>March 2021</creationDate>
    <!-- Dummy author, feel free to replace anywhere you see it-->
    <author>Kris Cox</author>
    <authorUrl>https://cococo.be</authorUrl>
    <copyright>CoCoCo</copyright>
    <license>GPL v3</license>
    <!--  The version string is recorded in the components table -->
    <version>0.0.1</version>
    <!-- The description is optional and defaults to the name -->
    <description>
        Module to facilitate the administrative burden of a circusschool, such as handle subscriptions, presences, ...
    </description>

    <!-- This is the PHP namespace under which the extension's
    code is organised. It should follow this format:
    
    Vendor\Component\ComponentName

    "Vendor" can be your company or your own name
    
    The "ComponentName" section MUST match the name used 
    everywhere else for your component. Whatever the name of 
    this XML file is, the namespace must match (ignoring CamelCase). 
    -->
    <namespace path="src/">CoCoCo\Component\Balancirk</namespace>

    <files folder="site/">
        <folder>language</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <languages>
        <language tag="nl-BE">site/language/nl-BE/nl-BE.com_balancirk.ini</language>
        <language tag="fr-BE">site/language/fr-BE/fr-BE.com_balancirk.ini</language>
        <language tag="en-GB">site/language/en-GB/en-GB.com_balancirk.ini</language>
    </languages>

    <administration>
        <!-- The link that will appear in the Admin panel's "Components" menu -->
        <menu link="index.php?option=com_balancirk">Hello World</menu>
        <!-- List of files and folders to copy. Note the 'folder' attribute.
             This is the name of the folder in your component package to copy FROM -->
        <files folder="admin/">
            <folder>language</folder>
            <folder>services</folder>
            <folder>src</folder>
            <folder>sql</folder>
            <folder>table</folder>
            <folder>tmpl</folder>
        </files>

        <languages>
            <language tag="nl-BE">site/language/nl-BE/nl-BE.com_balancirk.ini</language>
            <language tag="fr-BE">site/language/fr-BE/fr-BE.com_balancirk.ini</language>
            <language tag="en-GB">site/language/en-GB/en-GB.com_balancirk.ini</language>
        </languages>

    </administration>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    <update>
        <schemas>
            <schemapath type="mysql">sql/updates/mysql</schemapath>
        </schemas>
    </update>

</extension>

